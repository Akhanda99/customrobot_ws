<launch>
  <!-- Arguments -->
  
  <arg name="open_rviz" default="true"/>
  <arg name="move_forward_only" default="false"/>


  <!-- AMCL -->
  <include file="$(find mico)/launch/mico_amcl.launch"/>

  <!-- move_base -->
  <include file="$(find mico)/launch/mico_move_base.launch">
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
  </include>

  <!-- rviz -->
  <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz__" required="true"
          args="-d $(find mico)/mico_nav.rviz"/>
  </group>
</launch>